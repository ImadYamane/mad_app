<?xml version="1.0" encoding="ISO-8859-1"?>

<pretty-config xmlns="http://ocpsoft.org/schema/rewrite-config-prettyfaces"
               xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
               xsi:schemaLocation="http://ocpsoft.org/schema/rewrite-config-prettyfaces
                      http://ocpsoft.org/xml/ns/prettyfaces/rewrite-config-prettyfaces.xsd">

    <!-- Home Mapping -->
    <url-mapping id="home">
        <pattern value="/home"/>
        <view-id value="/pages/protected/home.xhtml"/>
    </url-mapping>
    <!-- Login Mapping -->
    <url-mapping id="login">
        <pattern value="/login"/>
        <view-id value="/pages/public/login.xhtml"/>
    </url-mapping>
    <!-- Sales Mapping -->
    <url-mapping id="sales">
        <pattern value="/sales"/>
        <view-id value="/pages/public/home.xhtml"/>
    </url-mapping>
    <!-- Sales Mapping -->
    <url-mapping id="forbidden">
        <pattern value="/forbidden"/>
        <view-id value="/pages/public/errors/403.xhtml"/>
    </url-mapping>
</pretty-config>